extends ../layout.jade

block title
  title Tavlen

block content
  div.overlay
    div.overlay__centered
      i.fa.fa-remove.overlay__close
      h2.overlay__title Velg et passende navn for din kategori.
      span.overlay__error
      input(type='text', class='overlay__name-input', placeholder='Skriv her...')
      input(type='button', class='overlay__button', value='OK')
  div.header
    div.row
      div.column
        a(href='/', class='header__branding') Luxuz
  div.opts
    div.row
      div.column
        span.opts__income Din inntekt: <span class="opts__income-current">#{income}</span>
        div.opts__bills
        button.button.button--noair.new-board Lag ny tavle 
          i.fa.fa-plus
  div.board  
    div.row
      div.column.medium-12
        ul.board__container.small-block-grid-1.medium-block-grid-3.large-block-grid-4
        
